from flask import Flask, render_template, url_for, redirect

app = Flask(__name__)


valid_animals = ["chickens", "ducks", "pandas"]
@app.route("/")
def home():
    return render_template("index.html")

@app.route("/<animal>")
def animal_info(animal):
    if animal in valid_animals:
        return render_template(f"{animal}.html")
    else:
        return redirect(url_for("home"))

if __name__ == "__main__":
    app.run(debug=True, port=12345)

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Text Analysis</title>
</head>
<body>
	<h1>Text: {{ text }}</h1>
	<hr>
	<p>Length of string: {{ length }}</p>
	<p>Number of digits: {{ num_digits }}</p>
	<p>Number of vowels: {{ num_vowels }}</p>
	<p>Frequency of letters:</p>
	<ul>
		{% for char, freq in letter_freq.items() %}
			{% if char == " " %}
				<li>The space character is present</li>
			{% else %}
				{% if freq == 1 %}
					<li>{{ char }} appeared once.</li>
				{% else %}
					<li>{{ char }} appeared {{ freq }} times.</li>
				{% endif %}
			{% endif %}
		{% endfor %}
	</ul>
</body>
</html>

from flask import Flask, render_template

app = Flask(__name__)

@app.route("/")
def home():
    return render_template("index.html")

@app.route("/<text>")
def analyse(text):
    #get length
    length = len(text)

    #Get num of digits and vowels
    num_digits = 0
    num_vowels = 0
    for char in text:
        if char.isdigit():
            num_digits += 1
        if char.lower() in "aeiou":
            num_vowels += 1

    #get letter frequency
    letter_freq = {} #empty dict
    for char in text:
        char = char.lower()
        if char not in letter_freq:
            letter_freq[char] = 0 #first time seeing letter
        letter_freq[char] += 1

    return render_template("analysis.html", text=text, length=length,\
                           num_digits=num_digits, num_vowels=num_vowels,\
                           letter_freq=letter_freq)
    

if __name__ == "__main__":
    app.run(debug=True)
